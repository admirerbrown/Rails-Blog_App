<div class="form-container">
  <h1>New Comment</h1>

  <%= form_with model: @comment, url: user_post_comments_path, class: "form", local: true do |form| %>
    <div class="form-items">
      <%= form.text_area :text, required: true, class: "form_msg ", placeholder: "Write a comment..." %>
    </div>
    <div>
      <%= form.submit "Create comment", class: "btn" %>
    </div>
  <% end %>
  <p class="back"><%=link_to 'Back to posts', user_posts_path %></p>
</div>